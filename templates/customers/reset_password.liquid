<div class="container content-area">
  <div class="site-account">
    {%- form 'reset_customer_password' -%}

    {%- if form.errors != blank -%}
    <div class="alert alert-error">
      <div class="alert__icon">
        <i class="ris ri-alert"></i>
      </div>
      <div class="alert__content">
        {{- form.errors | default_errors -}}
      </div>
    </div>
    {%- endif -%}
    
    <div class="title-wrapper text-center">
      {%- include 'breadcrumbs' -%}
      <h1 class="page-title">{{ 'customer.reset_password.title' | t }}</h1>
      <div class="term-description"><p>{{ 'customer.reset_password.subtext' | t: email: email }}</p></div>
    </div>

    <div class="form-group">
      <label for="customer_reset-password">{{ 'customer.reset_password.password' | t }}<span class="required">*</span></label>
      <input id="customer_reset-password" type="password" name="customer[password]"{% if form.errors contains 'password' %} class="input-error"{% endif %} required="required" />
    </div>
    <div class="form-group">
      <label for="customer_reset-password_confirmation">{{ 'customer.reset_password.password_confirm' | t }}<span class="required">*</span></label>
      <input id="customer_reset-password_confirmation" type="password" name="customer[password_confirmation]"{% if form.errors contains 'password_confirmation' %} class="input-error"{% endif %} required="required" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary w100">{{ 'customer.reset_password.submit' | t }}</button>
    </div>

    {%- endform -%}
  </div>
</div>