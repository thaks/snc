.product-single__nav {
  position: relative;
  
  &.visible {
    .prev-product, .next-product {
      opacity: 1;
      pointer-events: visible;
    }
    .prev-product {
      @include transform(translateX(-13vw));
    }
    .next-product {
      @include transform(translateX(13vw));
    }
  }
  .prev-product, .next-product {
    opacity: 0;
    pointer-events: none;
    position: fixed;
    z-index: 9;
    font-size: 0;
    -webkit-perspective: 500;
    perspective: 500;
    top: calc(50% - 6vw);
    @include transition(1s transform cubic-bezier(0.19, 1, 0.22, 1), 1s opacity cubic-bezier(0.19, 1, 0.22, 1));
    
    &:hover {
      @include transform(none !important);
      @include transition-duration(1s);
      
      .product_text {
        opacity: 0;
        @include transition-delay(0s);
      }
      .preview .image-center {
        @include transform(none);
        @include transition(1s transform cubic-bezier(0.19, 1, 0.22, 1));
      }
    }
  }
  .prev-product {
    left: 0;
    @include transform(translateX(-22vw));
    
    .product_text .link {
      left: 30px;
      @include transform(rotate(-90deg));
    }
    .preview .image-center {
      @include transform(translateX(-50%) rotateY(50deg));
    }
  }
  .next-product {
    right: 0;
    @include transform(translateX(22vw));
    
    .product_text .link {
      right: 30px;
      @include transform(rotate(90deg));
    }
    .preview .image-center {
      @include transform(translateX(50%) rotateY(-50deg));
    }
  }
  .product_text {
    text-align: center;
    visibility: visible;
    opacity: 1;
    vertical-align: middle;
    width: 150px;
    display: inline-block;
    @include transition(opacity .1s);
    @include transition-delay(.2s);
    
    .link {
      position: relative;
      white-space: nowrap;
      font-size: 14px;
      font-weight: 400;
      letter-spacing: 2px;
      text-transform: uppercase;
      margin: 0;
      display: inline-block;
      vertical-align: middle;
    }
  }
  .preview {
    width: 10vw;
    display: inline-block;
    vertical-align: middle;
    
    .intrinsic {
      background-color: rgba(0, 0, 0, 0.04);
      position: relative;
      width: 100%;
      height: 0;
      padding-top: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
    .image-center {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
