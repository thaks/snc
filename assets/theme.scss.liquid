        display: block;
        padding: 0;
        width: 100%;
      }
    }
  }
  .compare_at_price {
    position: relative;
    display: inline;
    text-decoration: none;

    .price {
      position: relative;
      font-size: 88%;
      font-weight: 300;
      line-height: 1.4;
    }
    .price:before {
      width: 100%;
      position: absolute;
      content: "";
      right: 0;
      top: 50%;
      height: 0;
      opacity: .7;
      border-bottom: 1px solid #f9423a;
      @include transform(rotate(-15deg));
    }
    + ins {
      text-decoration: none;

      .price {
