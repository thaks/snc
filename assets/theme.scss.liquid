  .product-info {
    height: 100%;
    width: 100%;
    overflow-y: auto;
    padding: 3.75rem;
  }
  .product-single__top {
    padding: 0;
  }
  .go_to_product_page {
    padding: 20px 0;
    margin-bottom: 30px;
    border-top: 1px solid $color-border;
    border-bottom: 1px solid $color-border;
    
    a {
      position: relative;
      display: inline-block;
      font-size: 1.125rem;
      font-weight: 400;
      margin-bottom: 0;
      padding-left: 1.625rem;
      @include transition(transform .3s);
      
      &:before {
        content: '\EA0F';
        font-family: 'Barberry';
        font-weight: normal;
        line-height: 1;
        font-size: 1rem;
        position: absolute;
        left: 0;
        top: 50%;
        margin-top: -9px;
        @include transition(transform .3s);
      }
      &:hover {
        @include transform(translateX(10px));
        
        &:before {
          @include transform(translateX(3px));
        }
      }
    }
  }
  .product-single__photo-wrapper .slick-dots {
    display: block !important;
  }
  .product-single__thumbnail-wrapper {
    display: none !important;
