    z-index: 2;
  }
  .product__price {
    max-width: 35%;
    text-align: right;
    font-size: 18px;
    line-height: 1;
    font-weight: 600;
    color: $color-price;

    .price {
      line-height: 1.1;
    }
    .compare_at_price {
      text-align: right;
      width: 100%;

