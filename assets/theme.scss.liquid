.products-slider {
  &:before {
    content: "";
    width: 36px;
    height: 36px;
    display: block;
    vertical-align: middle;
    border: 1px solid transparent;
    border-top-color: $color-link;
    border-radius: 50%;
    position: absolute;
    z-index: 2;
    left: 50%;
    top: 0;
    margin-left: -18px;
