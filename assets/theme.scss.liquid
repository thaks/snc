.btn {
  overflow: hidden;
  position: relative;
  z-index: 1;
  display: inline-block;
  text-decoration: none;
  cursor: pointer;
  outline: none;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  line-height: 1;
  border-radius: 0;
  background-color: transparent;
  border: 1px solid $color-border;
  color: $color-link;
  font-family: $heading-font;
  font-weight: $button-font_weight;
  letter-spacing: $button-letter_spacing;
  text-transform: $button-text_transform;
  font-size: $btn_df;
  padding: $space_df $space_lg ($space_df * 0.9);
  @include backface-visibility(hidden);
  @include user-select();
  @include transition(color 1s ease, background-color 1s ease, border-color 1s ease);

  &:disabled, &[disabled], &:disabled[disabled] {
    cursor: not-allowed;
    opacity: .5;
  }
  &.btn-small {
    font-size: $btn_sm;
    padding: $space_md $space_df ($space_md * 0.9);
  }
  &.btn-large {
    font-size: $btn_lg;
    padding: $space_lg $space_xxl ($space_lg * 0.9);
  }
  &.btn-active {
    text-decoration: none;
    background-color: transparent;
    border-color: $color-link;
    color: $color-link;
  }
  &.btn-active:before {
    opacity: 1;
  }
  &.btn-primary {
    border-width: 2px;
    color: $btn-color !important;
    border-color: $btn-border !important;
    background-color: $btn-bground !important;

    &:after {
      z-index: -1;
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      width: 150%;
      height: calc(100% + 2px);
      background-color: $btn-bground_hover;
      @include backface-visibility(hidden);
      @include transform(rotate3d(0, 0, 1, 10deg) translate3d(-1.2em, 110%, 0));
      @include transform-origin(0% 100%);
      @include transition(transform 0.5s cubic-bezier(0.59, 0.03, 0.2, 1));
    }
    &:hover {
      color: $btn-color_hover !important;
      border-color: $btn-border_hover !important;

      &:after {
        @include transform(rotate3d(0, 0, 1, 0deg) translate3d(0, 0, 0));
      }
    }
  }
  &.btn-secondary {
    @include transition(opacity .3s ease);

    &:hover {
      opacity: .8;
    }
  }
  &:focus {
    outline: none;
  }
  + .btn, + .btn-link {
    margin-left: 10px;
  }
  font {
    vertical-align: initial !important;
  }
}
.btn-link {
  text-decoration: none;
  cursor: pointer;
  outline: none;
  border: none;
  background-color: transparent !important;
  border-bottom: 2px solid;
  overflow: visible;
  padding: 0 0 6px;
  font-size: 0.8125rem;
  font-weight: 700;
  color: $color-link;
  @include transition(color .3s ease, border-color .3s ease, opacity .3s ease !important);
  
  &:hover {
    color: $color-highlight;
    border-color: transparent !important;
  }
  &.btn-primary {
    color: $color-link !important;
    background-color: transparent !important;
    border-bottom: 2px solid !important;
    
    &:hover {
      color: $color-highlight !important;
      border-color: transparent !important;
    }
    &:after {
      display: none;
    }
  }
}
.btn-small {
  font-size: $btn_sm;
  padding: $space_md $space_df ($space_md * 0.9);
}
.btn-large {
  font-size: $btn_lg;
  padding: $space_lg $space_xxl ($space_lg * 0.9);
}
.btn-disabled {
  pointer-events: none;
  opacity: .5;
  cursor: default;

  &:not(.btn-primary):before {
    display: none;
  }
  &:hover,
  &:focus {
    opacity: .5;
  }
}
.close-icon {
  overflow: hidden;
  position: absolute;
  left: 0px;
  top: 0px;
  cursor: pointer;
  width: 1.3rem;
  height: 1.3rem;
  font-size: 0;
  opacity: 0;
  @include transition(opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1));
  
  &:before, &:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 0%;
    width: 100%;
    height: 0.16rem;
    margin-top: -0.09375rem;
    background-color: $color-link;
    @include transition(transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), color 0.3s ease);
    @include transition-delay(0.1s);
  }
  &:before {
    @include transform(rotate(-45deg) translateX(-140%));
  }
  &:after {
    @include transform(rotate(45deg) translateX(-140%));
  }
  &:hover {
    &:before, &:after {
      background-color: $color-highlight;
    }
  }
}
.placeholder-icon {
  position: relative;
  cursor: pointer;
  width: 55px;
  height: 55px;
  border-radius: 50%;
  box-shadow: 0px 0px 50px 0px rgba(0, 0, 0, 0.08);
  background-color: $color-bground;
  @include flexbox();
  @include align-items(center);
  @include justify-content(center);

  &:before {
    content: '';
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 50%;
    background-color: $color-highlight;
    @include transform(scale(0));
    @include transform-origin(center center);
    @include transition(transform 0.5s cubic-bezier(0.19, 1, 0.22, 1));
    @include backface-visibility(hidden);
  }
  &:after {
    content: '';
    font-family: 'Barberry';
    font-size: 20px;
    font-weight: 700;
    line-height: 1;
    color: inherit;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -10px;
    margin-left: -10px;
    @include transition(color .3s ease-in-out);
  }
  &:hover {
    &:before {
      @include transform(scale(1));
    }
    &:after {
      color: $color-bground;
      @include transform(scale(.8));
    }
  }
}
