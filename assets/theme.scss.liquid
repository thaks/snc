          @include transform(scale(1.2));
        }
      }
      &.active {
        .swatch {
          pointer-events: none;
          @include transform(scale(1.4));
          
          &:before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            border-radius: 50%;
            width: 3px;
            height: 3px;
            background-color: $color-bground;
            @include transform(translate(-50%, -50%));
          }
