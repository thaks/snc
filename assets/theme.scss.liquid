  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.1);
  pointer-events: none;
  opacity: 0;
  @include transition-delay(.2s);
  @include transition(opacity 1s cubic-bezier(0.19, 1, 0.22, 1), visibility 1s steps(1, end));
}
.cd-quick-view {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  z-index: 100;
  @include transition(opacity .3s ease-in-out);
  @include transition-delay(.2s);

  &.opened {
    opacity: 1;
    visibility: visible;
    pointer-events: visible;
    
    .cd-content {
      opacity: 1;
      visibility: visible;
    }
    .cd-close .close-icon {
      opacity: 1;
      @include transition-delay(.3s);

      &:before, &:after {
        @include transition-delay(.5s);
      }
      &:before {
        @include transform(rotate(-45deg) translateX(0%));
      }
      &:after {
        @include transform(rotate(45deg) translateX(0%));
      }
    }
  }
  ::-webkit-scrollbar {
    width: 2px;
  }
  .cd-overlay {
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.1);
    cursor: url(cross.svg?1), url(cross.png), zoom-out;
  }
  .cd-content {
    width: 100%;
    height: auto;
    position: relative;
    z-index: 2;
    max-height: 80vh;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    box-shadow: 5px 5px 130px 5px rgba(0, 0, 0, 0.2);
    background-color: $color-bground;
    @include transition(opacity .5s ease-in-out);
  }
  .cd-close {
    z-index: 10;
    position: absolute;
    top: 20px;
    right: 20px;
    width: 40px;
    height: 40px;
    cursor: pointer;

    .close-icon {
      top: 50%;
      left: 50%;
      @include transform(translate(-50%, -50%));
    }
  }
  .product-single {
    max-height: 80vh;
    overflow: hidden;
    
    .product__labels {
      top: 15px;
      left: 15px;
    }
  }
  .product-info-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    max-height: 80vh;
    
    &:hover {
      &:after {
        opacity: 0;
        pointer-events: none;
      }
    }
    &:after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 200px;
      z-index: 3;
      right: 0;
      display: block;
      background: $color-bground;
      background: linear-gradient(to bottom, rgba($color-bground, 0) 0%, $color-bground 70%);
      @include transition(opacity .5s);
