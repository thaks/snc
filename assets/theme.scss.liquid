      .product__image-second {
        opacity: 1;
        transform: scale(1.08);
      }
    }
  }
  .product__image {
    @include transition(filter .3s ease);
  }
  .product__image-second {
    z-index: 1;
    opacity: 0;
    @include transition(opacity 0.5s ease,transform 2s cubic-bezier(0,0,.44,1.18));
  }
  .product__overlay {
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0;
    @include backface-visibility(hidden);
    @include transition(opacity .3s ease);
  }
  .product__buttons {
    opacity: 0;
    z-index: 3;
    text-align: center;
    position: absolute;
    width: 100%;
    @include transform(translateY(0));
    @include transition(opacity 1s cubic-bezier(.19,1,.22,1), transform 1s cubic-bezier(.19,1,.22,1));
    @include transition-delay(0s);

    .btn {
      margin: 0;
      border-width: 1px;
      position: relative;
      font-weight: 600;
      padding: 10px 20px 9px;
      text-transform: capitalize;
      letter-spacing: 0;
      margin-bottom: 0;
      min-height: 40px;
      height: 100%;
      white-space: normal;
      margin-right: -1px;
      color: $color-link;
      border-color: $color-link;
      background-color: $color-bground;
    }
    .quickview_btn, .addwishlist_btn {
      overflow: visible;
      @include transition(all 1s cubic-bezier(.19,1,.22,1));

      &:after {
        transition-delay: 0s;
        position: absolute;
        left: 50%;
        top: 50%;
        margin-top: -8px;
        margin-left: -8px;
        z-index: 1;
        font-family: 'Barberry';
        font-weight: 400;
        line-height: 1;
        font-size: 16px;
      }
      &:hover {
        color: $color-bground;
        border-color: $color-highlight;
        background-color: $color-highlight;
      }
      &.adding {
        &:after {
          content: '';
          display: inline-block;
          width: 16px;
          height: 16px;
          border-radius: 100%;
          border: 1px solid transparent;
          border-top: 1px solid;
          @include animation(fadeIn .5s ease-in, loadSpin .5s linear infinite);
          @include transition-delay(0.1s);
        }
      }
    }
    .quickview_btn:after {
      content: '\EA15';
    }
    .addwishlist_btn {
      &:after {
        content: '\EA06';
      }
      &:not(.adding):hover:after {
        @include animation(beat .6s ease-in-out infinite);
      }
      &.added:after {
        content: '\EA05';
      }
    }
    .product_btn {
      @include inline-flex();
      @include align-items(center);
      @include justify-content(center);

      &:hover {
        color: $color-bground;
        border-color: $color-highlight;

        &:before {
          @include transform(rotate3d(0,0,1,0deg) translate3d(0,0,0));
        }
      }
      &:before {
        z-index: -1;
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 150%;
        height: 100%;
        background-color: $color-highlight;
        @include transform(rotate3d(0,0,1,10deg) translate3d(-1.2em,110%,0));
        @include transform-origin(0% 100%);
        @include transition(transform 0.5s cubic-bezier(.59,.03,.2,1));
      }
      .tooltip {
        display: none;
      }
    }
    .addcart_btn {
      &.adding {
        color: transparent;

        &:hover:after {
          color: $color-bground;
        }
        &:after {
          content: '' !important;
          display: inline-block;
          box-sizing: border-box;
          position: absolute;
          left: 50%;
          top: 50%;
          margin-top: -8px;
          margin-left: -8px;
          z-index: 1;
          width: 16px;
          height: 16px;
          border-radius: 100%;
          border: 1px solid transparent;
          border-top: 1px solid;
          color: $color-link;
          @include transition-delay(0.1s);
          @include animation(fadeIn .5s ease-in, loadSpin .5s linear infinite);
