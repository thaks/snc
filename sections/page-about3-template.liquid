<div class="page-about">
  <div class="about-introduction row">
    {%- if section.settings.image -%}
    <div class="col-12 col-md-6{% if section.settings.image_position == 'right' %} order-md-last{% endif %}">
      {%- capture img_sizes -%}{% if section.settings.image.aspect_ratio > 1 %}x3{% else %}3x{% endif %}{%- endcapture -%}
      <div class="about-background lazyload" data-bgset="{% include 'bgset', image: section.settings.image %}" data-sizes="auto" data-parent-fit="cover" style="background-image:url({{ section.settings.image | img_url: img_sizes }});"></div>
    </div>
    {%- else -%}
    <div class="col-12 col-md-2"></div>
    {%- endif -%}

    <div class="col-12 {% if section.settings.image %}col-md-6{% else %}col-md-8{% endif %}">
      <div class="about-content-wrapper">
        {%- if section.settings.heading != blank -%}
        <h2 class="about-heading text-center">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
        <div class="about-subheading text-center">{{ section.settings.subheading }}</div>
        {%- endif -%}
        {%- if section.settings.content != blank -%}
        <div class="about-content">{{ section.settings.content }}</div>
        {%- endif -%}
        
        <div class="row">
          <div class="col-12 col-md-6">
            {%- if section.settings.about_heading != blank -%}
            <h3 class="about-subheading2">{{ section.settings.about_heading }}</h3>
            {%- endif -%}
            {%- if section.settings.about_content != blank -%}
            <div class="about-content2">{{ section.settings.about_content }}</div>
            {%- endif -%}
          </div>
          <div class="col-12 col-md-6">
            {%- if section.settings.contact_heading != blank -%}
            <h3 class="about-subheading2">{{ section.settings.contact_heading }}</h3>
            {%- endif -%}
            {%- if section.settings.contact_content != blank -%}
            <div class="about-content2">{{ section.settings.contact_content }}</div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "About Us page",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "select",
        "id": "image_position",
        "label": "Image position",
        "default": "left",
        "options": [
          {
            "label": "Left",
            "value": "left"
          },
          {
            "label": "Right",
            "value": "right"
          }
        ]
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Who we are"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub heading"
      },
      {
        "type": "html",
        "id": "content",
        "label": "Content",
        "default": "Tell your brand's story through video and images"
      },
      {
        "type": "header",
        "content": "About"
      },
      {
        "type": "text",
        "id": "about_heading",
        "label": "About heading"
      },
      {
        "type": "html",
        "id": "about_content",
        "label": "About content"
      },
      {
        "type": "header",
        "content": "Contact"
      },
      {
        "type": "text",
        "id": "contact_heading",
        "label": "Contact heading"
      },
      {
        "type": "html",
        "id": "contact_content",
        "label": "Contact content"
      }
    ]
  }
{% endschema %}